<div class="container">
  <div class="auth-form">
    <h2>プロフィール編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-row">
        <div class="form-group half">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, autofocus: true, required: true %>
        </div>
        <div class="form-group half">
          <%= f.label :age, "年齢" %>
          <%= f.number_field :age, min: 0, max: 120, placeholder: "例: 25" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-group">
          <small>確認待ち: <%= resource.unconfirmed_email %></small>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :skills, "スキル" %>
        <%= f.text_field :skills, required: true, placeholder: "例: Ruby, JavaScript, React" %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image, "プロフィール画像" %>
        <% if resource.profile_image.attached? %>
          <div class="current-image">
            <%= image_tag resource.profile_image, alt: "現在のプロフィール画像", style: "width: 100px; height: 100px; object-fit: cover; border-radius: 50%; margin: 10px 0;" %>
          </div>
        <% end %>
        <%= f.file_field :profile_image, accept: "image/*", class: "file-input" %>
        <small>JPEG, PNG, GIF形式のファイル（5MB以下）をアップロードしてください</small>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "自己紹介（任意）" %>
        <%= f.text_area :introduction, rows: 3, placeholder: "あなたについて簡単に教えてください..." %>
      </div>

      <div class="form-row">
        <div class="form-group half">
          <%= f.label :password, "パスワード" %>
          <small>変更しない場合は空白のままにしてください</small>
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <small><%= @minimum_password_length %>文字以上</small>
          <% end %>
        </div>
        <div class="form-group half">
          <%= f.label :password_confirmation, "パスワード確認" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "現在のパスワード" %>
        <small>変更を確認するために現在のパスワードが必要です</small>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="form-actions">
        <%= f.submit "更新", class: "btn btn-primary btn-large" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "戻る", :back %>
    </div>
  </div>
</div>
